# PEC Chatbot Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# URL of the backend API server
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
VITE_API_URL=http://localhost:8000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Name
# Display name for the chatbot application
VITE_APP_NAME=PEC Chatbot

# Application Version
# Version number for the application
VITE_APP_VERSION=2.0

# Application Description
# Description of the chatbot application
VITE_APP_DESCRIPTION=PEC Engineering Assistant

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Theme
# Application theme (light, dark, auto)
# Options: light, dark, auto
VITE_THEME=light

# Primary Color
# Primary color for the application theme
# Format: hex color code (e.g., #3B82F6)
VITE_PRIMARY_COLOR=#3B82F6

# Secondary Color
# Secondary color for the application theme
# Format: hex color code (e.g., #6B7280)
VITE_SECONDARY_COLOR=#6B7280

# =============================================================================
# CHATBOT CONFIGURATION
# =============================================================================

# Chatbot Title
# Title displayed in the chatbot interface
VITE_CHATBOT_TITLE=PEC Engineering Assistant

# Chatbot Subtitle
# Subtitle or description for the chatbot
VITE_CHATBOT_SUBTITLE=Ask questions about PEC regulations and procedures

# Welcome Message
# Initial message shown to users
VITE_WELCOME_MESSAGE=Hello! I'm your PEC Engineering Assistant. How can I help you today?

# Placeholder Text
# Placeholder text for the input field
VITE_INPUT_PLACEHOLDER=Type your question about PEC...

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable File Upload
# Allow users to upload PDF files
# Options: true, false
VITE_ENABLE_FILE_UPLOAD=false

# Enable Source Display
# Show source documents in responses
# Options: true, false
VITE_ENABLE_SOURCE_DISPLAY=true

# Enable Typing Indicator
# Show typing indicator while processing
# Options: true, false
VITE_ENABLE_TYPING_INDICATOR=true

# Enable Message Timestamps
# Show timestamps for messages
# Options: true, false
VITE_ENABLE_TIMESTAMPS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Request Timeout
# Timeout for API requests (milliseconds)
# Default: 30000 (30 seconds)
VITE_REQUEST_TIMEOUT=30000

# Retry Attempts
# Number of retry attempts for failed requests
# Default: 3
VITE_RETRY_ATTEMPTS=3

# Retry Delay
# Delay between retry attempts (milliseconds)
# Default: 1000 (1 second)
VITE_RETRY_DELAY=1000

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Enable Analytics
# Enable usage analytics and monitoring
# Options: true, false
VITE_ENABLE_ANALYTICS=false

# Analytics ID
# Analytics service identifier
# Example: Google Analytics ID, Mixpanel ID, etc.
VITE_ANALYTICS_ID=

# Enable Error Reporting
# Enable error reporting and logging
# Options: true, false
VITE_ENABLE_ERROR_REPORTING=false

# Error Reporting URL
# URL for error reporting service
VITE_ERROR_REPORTING_URL=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable HTTPS Only
# Force HTTPS connections in production
# Options: true, false
VITE_FORCE_HTTPS=false

# Content Security Policy
# Content Security Policy settings
# Options: strict, moderate, disabled
VITE_CSP_LEVEL=moderate

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode
# Enable debug features and verbose logging
# WARNING: Never enable in production
VITE_DEBUG=false

# Enable DevTools
# Enable development tools and debugging
# Options: true, false
VITE_ENABLE_DEVTOOLS=false

# Mock API
# Use mock API for development
# Options: true, false
VITE_USE_MOCK_API=false

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# Default Language
# Default language for the application
# Options: en, ur, ar
VITE_DEFAULT_LANGUAGE=en

# Enable Multi-language
# Enable multiple language support
# Options: true, false
VITE_ENABLE_I18N=false

# =============================================================================
# ACCESSIBILITY
# =============================================================================

# Enable Accessibility Features
# Enable accessibility features and ARIA labels
# Options: true, false
VITE_ENABLE_A11Y=true

# High Contrast Mode
# Enable high contrast mode for better visibility
# Options: true, false
VITE_HIGH_CONTRAST=false

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Custom CSS
# URL to custom CSS file for styling
VITE_CUSTOM_CSS=

# Custom Logo
# URL to custom logo image
VITE_CUSTOM_LOGO=

# Custom Favicon
# URL to custom favicon
VITE_CUSTOM_FAVICON=

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Enable WebSocket
# Enable WebSocket for real-time communication
# Options: true, false
VITE_ENABLE_WEBSOCKET=false

# WebSocket URL
# WebSocket server URL
VITE_WEBSOCKET_URL=ws://localhost:8000/ws

# Enable Push Notifications
# Enable push notifications
# Options: true, false
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# NOTES
# =============================================================================

# 1. All VITE_ prefixed variables are available in the frontend code
# 2. Never commit the actual .env file to version control
# 3. Use environment-specific values for different deployments
# 4. Test all configurations in a staging environment first
# 5. Keep backups of your configuration files
# 6. Use HTTPS URLs for production environments
# 7. Enable security features for production deployments
